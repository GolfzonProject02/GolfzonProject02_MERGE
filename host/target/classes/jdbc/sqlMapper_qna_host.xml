<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="worktalk.com.host.repository.Qnaimpl">

	<insert id="SQL_INSERT_QNA"
		parameterType="worktalk.com.host.domain.Qna">
		INSERT INTO qna
		(q_num,space_num,writer,type,content,q_date)
		VALUES(seq_qna.nextval,#{space_num},#{writer},#{type},#{content},TO_CHAR(localtimestamp,'yyyy-mm-dd HH:mm'))
	</insert>

	<update id="SQL_UPDATE_QNA" parameterType="worktalk.com.host.domain.Qna">
		UPDATE qna SET
		content=#{content}, q_date=#{TO_CHAR(localtimestamp,'yyyy-mm-dd HH:mm')} WHERE
		q_num=#{q_num}
	</update>

	<delete id="SQL_DELETE_QNA" parameterType="worktalk.com.host.domain.Qna">
		DELETE FROM qna WHERE
		q_num=#{q_num}
	</delete>

	<select id="SQL_SELECT_ALL_QNA" resultType="worktalk.com.host.domain.Qna"
		parameterType="worktalk.com.host.domain.Qna">
		SELECT q.*, qc.host, qc.qc_date, NVL(qc.qc_comment,0) qc_comment FROM qna q left join qna_comment qc on q.q_num = qc.q_num 
		WHERE q.space_num = #{space_num}
		ORDER BY q.q_num DESC
	</select>
	
	<select id="SQL_SELECT_ALL_BYNAME" resultType="worktalk.com.host.domain.Qna"
		parameterType="worktalk.com.host.domain.Qna">
		SELECT * FROM qna WHERE writer = #{writer}
		ORDER BY q_num DESC
	</select>

</mapper>